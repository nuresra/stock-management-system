@model StockManagementSystem.ViewModels.SaleViewModel

<h2>Yeni Satış Ekle</h2>
<form asp-action="Create">
    <div>
        <label for="ProductId">Ürün Seç:</label>
        <select asp-for="ProductId" asp-items="@(new SelectList(Model.Products, "Id", "Name"))"></select>
    </div>
    <div>
        <label for="Quantity">Miktar:</label>
        <input asp-for="Quantity" type="number" />
    </div>
    <button type="submit">Satışı Tamamla</button>
</form>
