@page
@model IEnumerable<StockManagementSystem.Models.Product>

<h2>Ürün Listesi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Barkod</th>
            <th>Adı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Barcode</td>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.StockQuantity</td>
                <td>
                    <a asp-action="UpdateStock" asp-route-id="@product.ProductID">Stok Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create">Yeni Ürün Ekle</a>

